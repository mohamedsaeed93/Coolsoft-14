<div class ="tabs">
	<ul class="tab-links red">
	<li class="active"><a href="#">Create Problems</a></li>
		<li><%= link_to "Copy from Existing Problems", {:controller => 'assignment_problems',
								:action => 'index',:id => @assignment.id} %></li>
		
	</ul>
	<div class="tab-content">
		<div id="tab1" class="tab active">
	<%= form_for :assignment_problem, url: assignment_problems_path do |f| %>
	<p>
		<%= f.label :title %><br> 
		<%= f.text_field :title, placeholder:"Title" %>
	</p>
	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description, :cols => "50", :rows => "10", placeholder:"Description",
			 class: "form-control", style: "width:60%" %>
	</p>
	<p>
		<%= f.label :grade %><br> 
		<%= f.text_field :final_grade, placeholder:"Grade", style: "width:55px; height:35px;" %>
	</p>
	<br>

		
		<ul class="navbar-brand pull-right"><%= link_to "Finish", {:controller => 'assignments', 
			:action => 'show',
					:id=> @assignment.id}, class: "btn btn-info", 
						style: "float: left;margin-left: 15px",method: :post %> </ul>
						<ul class="navbar-brand pull-right"><%= f.submit "Save", class: "btn btn-info" %></ul>
		

<% end %>
		</div>
	</div>
</div>
<style>
  .red .active a,
 .red .active a:hover {
    background-color: #6699CC;
    border-color: black;
}
.tab-links>li>a {
  background-color: #fff; 
  border-color: #777777;
}
</style>

