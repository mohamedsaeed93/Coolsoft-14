
<div class ="tabs">


	<ul class="tab-links red">
	<li class="active"><a href="#">Create Problems</a></li>
		<li><%= link_to "Copy from Existing Problems", {:controller => 'assignment_problems',
								:action => 'index',:id => @assignment.id} %></li>
		
	</ul>
	<div class="tab-content">
		<div id="tab1" class="tab active">
		<% if flash[:notice] %>
		<div class = "alert alert-success"> Problem  is now added </div>
		<% end %>
		<% if @new_problem.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@new_problem.errors.count, "error") %> prohibited this problem from being saved:
		</h2>
		<ul>
			<% @new_problem.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
		<% end %> 
	</div>

	<%= form_for :assignment_problem, url: assignment_problems_path do |f| %>
	<h2> Create Problem </h2>
	<p>
		<%= f.label :title %><br> 
		<%= f.text_field :title, placeholder:"Title" %>
	</p>
	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description, :cols => "50", :rows => "10", placeholder:"Description",
			 class: "form-control", style: "width:60%" %>
	</p>
	<%= f.submit "Save", class: "btn btn-info" %>
	
	
		
		
						
		

<% end %>
		</div>
	</div>
</div>
<style>
  .red .active a,
 .red .active a:hover {
    background-color: #6699CC;
    border-color: black;
}
.tab-links>li>a {
  background-color: #fff; 
  border-color: #777777;
}
</style>

