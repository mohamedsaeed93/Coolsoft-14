<div class ="tabs">
	<ul class="tab-links white">
	<% if lecturer_signed_in? ||teaching_assistant_signed_in?  %>
		<li><%= link_to "Create problems", {:controller => 'assignment_problems',
								:action => 'new', :method => :get, :id => @assignment.id} %></li>
		<li class="active"><a href="#">Copy from Existing Problems</a></li>	
	<% end %>
	</ul>
	<%= form_for :problems_assignment, url: assignment_problems_path do |f| %>
	<div class="tab-content">
			<div id="tab1" class="tab active">
				<% openable = true %>
				<div class="panel-group list-group" id="accordion">
				<h3> Exercise problems </h3>
					<% @problems.each do |problem| %>
					<% if openable %>
						<% open = "in" %>
						<% openarrow = "glyphicon-chevron-down" %>
						<% openable = false %>
					<% else %>
						<% open = "" %>
						<% openarrow = "glyphicon-chevron-right" %>
					<% end %>
						<div class="panel panel-default">
							<div class="panel-title list-group-item list-group-item-info">
								<a class="icon glyphicon <%= openarrow %>"
								href="#<%= problem.id.to_s %>"
								data-toggle="collapse" data-parent="#accordion"
								style="float:left;text-decoration: none;">
								</a>
								
								
							<input value= problem , id="link_to problem.title, problem"name="fruit[]" type="checkbox"><%= link_to problem.title, problem %>/>


						</div>
						<div id="<%= problem.id.to_s %>" class="panel-collapse collapse <%= open %>">
							<%= problem.description %>
						</div>
					</div>
					<% end %>
					
					<% if @cproblems.any? %>
					<h3> Contest problems </h3>
					<% @cproblems.each do |problem| %>
					<% if openable %>
						<% open = "in" %>
						<% openarrow = "glyphicon-chevron-down" %>
						<% openable = false %>
					<% else %>
						<% open = "" %>
						<% openarrow = "glyphicon-chevron-right" %>
					<% end %>

						<div class="panel panel-default">
							<div class="panel-title list-group-item list-group-item-info">
								<a class="icon glyphicon <%= openarrow %>"
								href="#<%= problem.id.to_s %>"
								data-toggle="collapse" data-parent="#accordion"
								style="float:left;text-decoration: none;">
								</a>
							<input type="checkbox" style = "float:right" id="inlineCheckbox1" value=" <%= link_to problem.title, problem %>" >
						</div>
						<div id="<%= problem.id.to_s %>" class="panel-collapse collapse <%= open %>">
							<%= problem.description %>
						</div>
					</div>
					<% end %>
				<% end %>
				</div>
			</div>
	</div>
</div>
<br>
<%= f.submit "Save", class: "btn btn-info" %>
<ul class="navbar-brand pull-right"> <%= link_to "Save",
		:controller => 'assignment_problems', :action => 'show', 
		:method => :get, class: 'btn btn-info btn-large' %></ul>
<% end %>
<style>
 .white .active a,
 .white.active a:hover {
    background-color: #6699CC;
    border-color: black;
}
.tab-links>li>a {
  background-color: #fff; 
  border-color: #777777;
}
.centered
{
    text-align:left;
}
.check
{
    width :85px;
    length : 90px;
    line-height: 50px;
}
input[type="radio"], input[type="checkbox"] {

height: 20px;
width: 20px;


}
</style>
<script type="text/javascript">
	('input[type="checkbox"]').checkbox({
   buttonStyle: 'btn-link',
   buttonStyleChecked: 'btn-inverse',
   checkedClass: 'icon-check',
   uncheckedClass: 'icon-check-empty',
   constructorCallback: null,
   defaultState: false,
   defaultEnabled: true,
 
   checked: false,
   enabled: true
});
</script>
