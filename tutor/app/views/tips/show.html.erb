<html>
	<body onLoad="setTimeout('delayedRedirect()', 3500)">
		<h2>
			Tip content:
		</h2>
		<h3>
			<%= @tip.message %>
		</h3>
		<p>
		Time: <%= @tip.time %>
		</p>
		<p>
			<%= link_to "Edit Tip", edit_tip_path(@tip),class: "btn btn-primary btn-xs", style: "float:left"%>
		</p>
		<br>
		<br>
		<%= link_to "Delete Tip", {:action => "destroy", :id => @tip.id }, data: { confirm: "Are you sure you want to delete this Tip?"},class: "btn btn-danger btn-xs", style: "float:left" , method: :delete %>
	</body>

	<script type="text/javascript">
		function delayedRedirect()
		{
			window.location = "/tips"
		}
	</script>
</html>