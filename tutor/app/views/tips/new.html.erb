
<body>
<script type="text/javascript">
	function toggle_visibility(id) {
		var e = document.getElementById(id);
		if(e.style.display == 'block')
			e.style.display = 'none';
		else
			e.style.display = 'block';
 	 }
</script>
</body>

<a href="#" onclick="toggle_visibility('foo');"><h2><li>Previous Tips</li></h2></a>
<div id="foo" style="display:none;">

<table class="table table-striped", style = "width:60%">

	<thead>
		<tr>
			<th style="width: 30%">Title</th>
			<th style="width: 20%">Time of showing in seconds</th>
			<th style="width: 10%">Edit</th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<% @tips.each do |tip1| %>
			<% if tip1.category == true %>
				<td><%= tip1.message  %></td>
				<td><%= tip1.time  %></td>
				<td><%= button_to "View or Edit"  , {:action => 'new', :controller => 'tips',:method => :post}, {class: 'btn btn-primary btn-xs' }   %></td>
		</tr>
          
	</tbody>		
				<% end %>
				<% end %>
</table>
</div>