<!-- The html web page consists of two tags
	a header to view the problem title of the instance variable @problem
and a paragraph to view the problem description of the instance variable @problem -->
<h2 id="div1",align ="center"><%= @problem.title %></h2>
<%= form_for :Problem, url: problem_path(@problem), method: :patch do |p| %>

		<%= p.text_field :title %>
		<%= p.hidden_field :description, value: @problem.description %>
		<%= p.submit('update title') %>
	
<% end %>
<p><%= @problem.description %></p>
<%= form_for :Problem, url: problem_path(@problem), method: :patch do |p| %>

		<%= p.text_area :description, :cols => "50", :rows => "10" %>
		<p>
		<%= p.submit('update description') %>
		</p>
		<%= p.hidden_field :title, value: @problem.title %>
	
<% end %>

<p id="div3">Current Track: <%= @track.title %></p>
<%= form_for :Problem, url: problem_path(@problem), method: :patch, remote: true do |p| %>
	<% if Array(@tracks).size > 1 %>
		<%= p.collection_select(:track_id, @tracks, :id,:title ) %>
		<%= p.submit('Change Track') %>
	<% end %>
<% end %>

<%= render partial: "test_cases/index" %>
<%= render partial: "model_answers/new" %>
<br>
<%= render partial: "problems/success_options" %>
<%= render partial: "problems/failure_options" %>
<br>
<% if flash[:notice] %>
	<div class="notice" id="div4"><%= flash[:notice] %></div>
<% end %>