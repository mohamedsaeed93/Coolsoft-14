<div align="center">
	<h2>Resend confirmation instructions</h2>

	<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), 
		html: { method: :post, :class => 'form-devise' }) do |f| %>
		<%= devise_error_messages! %>

		<div>
			<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
		</div>

		<div><%= f.submit "Resend confirmation instructions", class: "btn btn-success button-devise" %></div>
	<% end %>

	<%= render "teaching_assistants/shared/links" %>
</div>