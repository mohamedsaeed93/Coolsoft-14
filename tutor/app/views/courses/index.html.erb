<div>
	<br><br><br>
	<div class="row">
		<div class="container">
			<div class="col-md-8"><h2><b>&raquo; Courses</b></h2></div>
			<div class="col-md-4 pop_new">
				<%= link_to "Add Course", new_course_path %>
			</div>

		</div>
	</div>
	<div class="well">
		<% if @courses.any? %>
			<div class="row">
				<% @courses.each do |course| %>
					<div class="container col-sm-6">
						<div class="well" style="background-color: #d7dde2 !important;">
							<h3><b><%= link_to course.name, course %></b><hr></h3>
							<label><%= course.description %></label><br><br>
							<% if lecturer_signed_in? %>
								<% if current_lecturer.courses.find(course) %>
									<%= link_to "Manage ", edit_course_path(course)%><b>|</b>	
								<% end %>
								<%= link_to " Disscussion Board", course.discussion_board%>
							<% elsif student_signed_in? %>
								<div class="row">
									<div class="col-sm-4">
									<% if lecturer_signed_in? %>
									<% if current_lecturer.courses.find(course) %>
										<%= link_to "Manage ", edit_course_path(course)%>	
									<% end %>
									<% elsif student_signed_in? %>
										<% if @share[course.id] == "Show" %>
												<%= button_to "Show Performance", {:controller => 'courses', :action => 'share',
													:id => course.id, :value => true}, class: "switch_sharing", style: "text-decoration:none" %>
											<% else %>
												<%= button_to "Hide Performance", {:controller => 'courses', :action => 'share',
													:id => course.id, :value => false}, class: "switch_sharing", style: "text-decoration:none;" %>
											<% end %>
									<% end %>
								
									</div>
									<div class="col-sm-8"><b>|</b><%= link_to " Disscussion Board", course.discussion_board%></div>
								</div>
							<% end %>
						</div>
					</div>
				<%end%>
			</div>
		<% end %>
	</div>
</div>