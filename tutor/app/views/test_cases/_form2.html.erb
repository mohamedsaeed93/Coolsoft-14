<div id="div1">
	<% if flash[:notice] %>
		<div class= "alert alert-success"><%= flash[:notice] %></div>
	<% end %>
</div>
<%= form_for :test_case, url: test_case_path(@test_case), method: :patch, remote: true do |test_case| %>
	<h2>Test Case </h2>
	<h3><%= test_case.label :Input%> </h3>
	<h4 align ="left"><%= @test_case.input %></h4>
	<%= test_case.text_field :input, class:"form-control", style:"width:350px" %></br>
	<h3><%= test_case.label :Output %></h3>
	<h4 align ="left"><%= @test_case.output %></h4>
	<%= test_case.text_field :output, class:"form-control", style:"width:350px" %></br>
	<br><%= test_case.submit "Save changes", class: "btn btn-large btn-info" %><br>
<% end %>