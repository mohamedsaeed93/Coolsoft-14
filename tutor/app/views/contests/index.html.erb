<% if flash[:notice] %>
	<div class="alert alert-warning",
		style="width:180px;display:inline"><%= flash[:notice] %></div>
<% end %>

<table class="table table-striped table-bordered table-responsive">
	<% unless @contests.blank? %>
		<tr>
			<td>Contests</td>
			<td>start date</td>
			<td>start time</td>
			<td>Actions</td>
		</tr>
		<% @contests.each do |contest| %>
			<tr>
				<td>
					<h4><%= link_to contest.title, :controller => 'contests', :action=> 'show',
							:id => contest.id,:method => :get, class:
								"btn btn-success" %></h4>
				</td>
				<td>
					<h4><%= contest.start_date %></h4>
				</td>
				<td>
					<h4><%= contest.start_time %></h4>
				</td>
				<% if current_lecturer || current_teaching_assistant %>
					<td>
						<h4><%= link_to "Edit", "/edit/"+contest.id.to_s %></h4>
					</td>
				<% else %>
					<td>
						<h4><%= link_to "Register", :controller => 'contests', :action=> 'edit',
								:id => contest.id,:method => :get, class:
									"btn btn-success" %></h4>
					</td>
				<% end %>e					
			</tr>
		<% end %>
	<% else %>
		You have no contests
	<% end %>	
</table>