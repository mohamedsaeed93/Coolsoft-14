							<% color = "label label-success" %>
						<% end %>-->
						<li class="list-group-item" data-toggle="tooltip"
							data-placement="top" title="<%= problem.description%>"> <!--this is where I should put the description-->
								<!--<%= link_to p.title , p , class: color %>-->
						</li>
					<% end %>
				</ul>
			</div>
		</div>
	<% end %>
</div>