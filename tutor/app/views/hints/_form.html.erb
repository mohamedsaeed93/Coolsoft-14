<% if lecturer_signed_in? || teaching_assistant_signed_in? %>
	<% if @tip.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@tip.errors.count, "error") %>
				prohibited the Tip from being saved:
			</h2> 
		</div>
		<ul>
		<% @tip.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
		<% end %>
		</ul>
	<% end %>
	<%= form_for :tip_edit, :html => {:method => :post}, url: edit_tip_path do |tip_edit| %>
		<p>
			<%= tip_edit.label :Content %><br>
			<%= tip_edit.text_area :message, :cols => "40", :rows => "5", :value => @tip.message %>
		</p>
		<p>
			<%= tip_edit.label :Time_in_seconds %><br>
			<%= tip_edit.text_field :time, style:"width:55px; height:35px;", :value => @tip.time %>
		</p>	
		<%= tip_edit.submit "Save changes", class: "btn btn-large btn-primary", style: "float:left" %>
		<%= link_to "Cancel", {:controller => 'tips', action: 'edit',
			:problem_id => params[:problem_id], :model_answer_id => params[:model_answer_id],:track_id => session[:track_id]}, class: "btn btn-info",
			style: "text-decoration:none; float:right" %>
	<% end %>
<% end %>