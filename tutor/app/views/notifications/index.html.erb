<% if flash[:notice] %>
	<div class="alert alert-warning",
		style="width:180px;display:inline"><%= flash[:notice] %></div>
<% end %>

<% if @new_notifications.size != 0 %>
	<h1> Unread Notifications </h1>
	<table class="table table-striped table-bordered table-responsive">
		<% @new_notifications.each do |notification| %>
			<tr>
				<td>
					<h6><%== notification.created_at %></h6>
				</td>
				<td>
					<h5><%== notification.message %></h5>
				</td>
			</tr>
		<% end %>
	</table>
<% else %>

<% end %>		

<% if @old_notifications != 0 %>
	<h1> Read Notifications </h1>
	<table class="table table-striped table-bordered table-responsive">
		<% @old_notifications.each do |notification| %>
			<tr>
				<td style="width: 15%;">
					<h6><%== notification.created_at %></h6>
				</td>
				<td>
					<h5><%== "<a href=''>"+notification.message+"</a>" %></h5>
				</td>
			</tr>
		<% end %>
	</table>
<% end %>
